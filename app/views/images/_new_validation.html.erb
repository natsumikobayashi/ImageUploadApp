<script>

  var nameField = document.querySelector('#name');
  var nameError = document.querySelector("#name-error");
  var nameForm = document.querySelector("#name-form");

  var imageField = document.querySelector("#image");
  var imageError = document.querySelector("#image-error");
  var imageForm = document.getElementById("#image-form");

  nameForm.addEventListener('input', ()=>{
    if (nameForm.value === "") {
      nameError.textContent = "名前を入力してください";
      nameError.style.color = "red";
      nameField.classList.add("name-form-error");
      nameField.classList.remove("name-form-success");
    } else if(nameForm.value.length < 3){
      nameError.textContent = "3文字以上入力してください";
      nameError.style.color = "orange";
      nameField.classList.add("name-form-error");
      nameField.classList.remove("name-form-success");
    } else {
      nameError.textContent = "";
      nameField.classList.remove("name-form");
      nameField.classList.add("name-form-success");
    }
  });

  imageField.classList.add("image-form-success");



</script>