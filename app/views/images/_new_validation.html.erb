<script>

  var nameField = document.querySelector('#name');

  var nameError = document.querySelector("#name-error");
  var nameForm = document.querySelector("#name-form");


  nameField.addEventListener('input', ()=>{
    if (nameForm.value === "") {
      nameError.textContent = "名前を入力してください";
      nameError.style.color = "red";
      nameForm.classList.add("name-form-error");
      nameForm.classList.remove("name-form-success");
    } else {
      nameError.textContent = "";
      nameForm.classList.remove("name-form");
      nameForm.classList.add("name-form-success");
    }
  });

</script>